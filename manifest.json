{
    "manifest_version": 3,
    "name": "AltClipboard",
    "description": "alternative clipboard for secure text, without using system clipboard",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}